 @using WEBUI.Models.Figures.Circle @model WEBUI.Models.Figures.Circle.CircleCreatingAndEditingView

@{
    ViewBag.Title = "EditCircle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Circle</h2>


@using (Html.BeginForm("CircleEdit", "Figure", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    CircleCreatingAndEditingView c=new CircleCreatingAndEditingView();

    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(m => m.Id)
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(m => m.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Radius, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Radius)
                @Html.ValidationMessageFor(m => m.Radius)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Circles")
</div>

